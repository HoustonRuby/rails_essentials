<h1>Listing posts</h1>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Publish on</th>
    <th>Featured</th>
    <th>Categories</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body %></td>
    <td><%= post.publish_on %></td>
    <td><%= post.featured %></td>
    <td><%= post.categories.map(&:name).join(" ")%></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
